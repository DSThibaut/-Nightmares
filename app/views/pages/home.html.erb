 <div class="search-container centered-body-elements">
    <div class="search-input">
      <input type="text" placeholder="Recherche">
        <a href="#" class="search-button">
         <%= image_tag "bouton-recherche.svg", alt: "Bouton recherche", class: "btn-search" %>
        </a>
        <div class="search-filters" style="margin-right: 16px;">
        </div>
  </div>
    <div class="search-filters">
      <select>
        <option value="Lyon">Lyon</option>
        <option value="Paris">Paris</option>
        <option value="Nice">Nice</option>
      </select>
      <label>
        <input type="checkbox" value="vue-cimetiere">
        Vue sur cimetière
      </label>
      <label>
        <input type="checkbox" value="eclairage-bougie">
        Éclairage à la bougie
      </label>
      <label>
        <input type="checkbox" value="sol-qui-grince">
        Sol qui grince
      </label>
      <label>
        <input type="checkbox" value="hurlements">
        Hurlements
      </label>
  </div>
</header>

<div class ="centered-body-elements">

<main>
<div class="container">
  <div class="row">
    <% @houses.each do |house| %>
      <div class="col-md-4 zoom">
        <%= link_to house_path(house.id) do %>
          <% if house.photo.attached? %>
            <%= cl_image_tag house.photo.key, alt: 'Maison des horreurs', class: 'property-image' %>
          <% else %>
            <%= image_tag("citrouille.png") %>
          <% end %>
          <h2><%= house.name %></h2>
          <div class="rating">
            <%= image_tag 'citrouille-pleine.png', alt: 'Citrouille pleine'%>
            <%= image_tag 'citrouille-pleine.png', alt: 'Citrouille pleine'%>
            <%= image_tag 'citrouille-pleine.png', alt: 'Citrouille pleine'%>
            <%= image_tag 'citrouille-pleine.png', alt: 'Citrouille pleine'%>
            <%= image_tag 'citrouille-vide.png', alt: 'Citrouille vide'%>
          </div>
          <p>Prix: <strong><%= house.price %>€</strong></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</main>

<br>
  <div class ='animated-text'>
    <div class="g-container">
      <div class="word">Your</div>
      <div class="word">Worst</div>
      <div class="word">Holidays</div>
    </div>

  </div>

</div>
